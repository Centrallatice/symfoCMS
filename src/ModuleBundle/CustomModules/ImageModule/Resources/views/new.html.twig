{% extends "::admin.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href='{{asset('css/vendor/froala/froala.min.css')}}' rel="stylesheet" type="text/css"/>
{% endblock %}
{% block breadcrumb %}
    <a class="breadcrumb" href="{{ path('custom_module_image_index') }}">Module</a>
    <a class="breadcrumb" href="#!">Création d'un module de Type Image</a>
{% endblock %}

{% block body %}
<div class="row">
        <div class="col s12">
            <div class="panel panel-pink">
                <div class="panel-heading">
                    <i class="material-icons">extension</i>
                    <span class="sub-panel-title">Création d'un module Image</span>
                </div>
                <div class="panel-body panel-form">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                </div>
                <div class="panel-footer">
                        <center><button class='btn green waves-effect waves-light' type="submit"><i class="material-icons left">save</i>Enregistrer</button></center>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type='text/javascript' src='{{asset('js/admin/module/main.js')}}'></script>
{% endblock %}