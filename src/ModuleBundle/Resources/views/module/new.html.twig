{% extends "::admin.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block breadcrumb %}
    <a class="breadcrumb" href="{{ path('admin_module_index') }}">Module</a>
    <a class="breadcrumb" href="#!">Création d'un module</a>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="cols12">
            <a role="button" class="btn waves-effect waves-light pull-right" href="{{ path('admin_module_index') }}"><i class="material-icons left">skip_previous</i> Revenir à la liste</a>
        </div>
    </div>
    {% include "::formback.html.twig" with {"form":form} %}      
    <div class="row">
        <div class="col s12">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-success" type="submit">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>   
{% endblock %}
