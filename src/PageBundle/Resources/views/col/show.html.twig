{% extends "::admin.html.twig" %}

{% block body %}
    <h1>Col</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ col.id }}</td>
            </tr>
            <tr>
                <th>Cssclass</th>
                <td>{{ col.cssClass }}</td>
            </tr>
            <tr>
                <th>Cssid</th>
                <td>{{ col.cssId }}</td>
