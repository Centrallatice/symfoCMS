{% extends "::admin.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/themes/admin/generator.css') }}">
    <link rel="stylesheet" href="{{ asset('css/vendor/froala/froala.min.css') }}">
{% endblock %}
{% block breadcrumb %} <a class="breadcrumb" href="{{ path('page_list') }}">Pages</a> /  Mes pages{% endblock %}
{% block body %}
    <div class="row">
        <div class="col s12 m12 l12">
            <a role="button" class="blue btn pull-right" href="{{ path('page_new') }}"><i class="fa fa-plus"></i> Créer une nouvelle page</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col s12 m12 l12">
            <table class="striped bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Créé le</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for page in pages %}
                        <tr id="page-{{page.id}}">
                            <td><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                            <td>{{ page.titre }}</td>
                            <td>{{ page.description }}</td>
                            <td class="text-right">{% if page.creationDate %}{{ page.creationDate|date('d/m/Y H:i') }}{% endif %}</td>
                            <td>{% if page.isHomePage %}<center><i class="fa-2x fa fa-home"></i></center>{% endif %}</td>
                            <td class="text-right">
                                <a data-hover="true" data-constrainwidth="false" class='dropdown-button btn blue' href='#' data-activates='dropdown-action-{{page.id}}'>Actions</a>
                                <ul id='dropdown-action-{{page.id}}' class='dropdown-content'>
                                    <li><a class="action-blue" href="{{ path('page_show', { 'id': page.id }) }}"><i class="fa fa-search"></i> Voir</a></li>
                                    <li><a class="action-purple" href="{{ path('page_edit', { 'id': page.id }) }}"><i class="fa fa-cog"></i> Modifier</a></li>
                                    <li><a class="action-red" href="#" onclick="deleteAjaxPage({{page.id}},'{{ path('page_ajax_delete', { 'id': page.id }) }}')"><i class="fa fa-remove"></i> Supprimer</a></li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>       
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type='text/javascript' src='{{asset('js/vendor/bootbox/bootbox.min.js')}}'>
    </script><script type='text/javascript' src='{{asset('js/admin/page/generator.js')}}'></script>
{% endblock %}
